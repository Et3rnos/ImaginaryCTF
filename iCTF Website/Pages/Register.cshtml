@page
@model RegisterModel

@using Microsoft.Extensions.Configuration
@inject IConfiguration configuration

@{
    ViewData["Title"] = "Register";
}

<div class="container text-center my-3">
    <h1 class="mt-3">Register</h1>
    <div class="row">
        <div class="col-10 offset-1 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-4 offset-lg-4">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post" id="register-form">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group mb-2">
                    <label asp-for="Input.Username"></label>
                    <input asp-for="Input.Username" class="form-control" />
                </div>
                <div class="form-group mb-2">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                </div>
                <div class="form-group mb-2">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                </div>
                <script src="https://www.google.com/recaptcha/api.js"></script>
                <script>
                    function onSubmit(token) {
                        document.getElementById("register-form").submit();
                    }
                </script>
                <button class="g-recaptcha btn btn-primary"
                        data-sitekey="@(configuration.GetValue<string>("RecaptchaV3SiteKey"))"
                        data-callback='onSubmit'
                        data-action='submit'>
                    Register
                </button>
            </form>
        </div>
    </div>
</div>

@page
@model ForgotPasswordModel

@using Microsoft.Extensions.Configuration
@inject IConfiguration configuration

@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="container text-center">
    <h1 class="m-3">@ViewData["Title"]</h1>
    <p>We are nice people so we will give you a chance to recover your account</p>
    <div class="row">
        <div class="col-10 offset-1 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-4 offset-lg-4">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                </div>
                <script src="https://www.google.com/recaptcha/api.js"></script>
                <div class="mb-2 text-center">
                    <div class="g-recaptcha d-inline-block" data-sitekey="@(configuration.GetValue<string>("RecaptchaV2SiteKey"))"></div>
                </div>
                <div class="mb-2">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
@page
@model iCTF_Website.Pages.LeaderboardModel

@{
    ViewData["Title"] = "Leaderboard";
}

<div class="container mb-3">
    <h1 class="text-center m-3">Leaderboard</h1>
    <div class="table-responsive">
        @if (Model.Users.Count == 0)
        {
            <p>Looks like there are no registered players yet :'(</p>
        }
        else
        {
            <table class="table table-striped table-light table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Position</th>
                        <th>Username</th>
                        <th>Score</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Users.Count; i++)
                    {
                        var name = Model.Users[i].DiscordUsername;
                        var appUser = Model.AppUsers.Where(x => x.UserId == Model.Users[i].Id).FirstOrDefault();
                        if (appUser != null)
                        {
                            name = appUser.UserName;
                        }
                        <tr>
                            <td>@(i + 1)</td>
                            <td><a class="text-decoration-none text-dark cool-link" href="/User/@Model.Users[i].Id">@name</a></td>
                            <td>@Model.Users[i].Score</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
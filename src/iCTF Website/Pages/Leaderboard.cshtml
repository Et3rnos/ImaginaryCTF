@page
@model iCTF_Website.Pages.LeaderboardModel

@{
    ViewData["Title"] = "Leaderboard";
}

<div class="container mb-3">
    <h1 class="text-center m-3">Leaderboard</h1>

    <div class="table-responsive">
        @if (Model.Items.Count == 0) {
            <p>Looks like there are no registered players yet :'(</p>
        } else {
            <table class="table table-striped table-light table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Position</th>
                        <th>Username</th>
                        <th>Score</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Items.Count; i++) {
                        var item = Model.Items[i];
                    <tr>
                        <td>@(i + 1)</td>
                        @if (item.IsTeam) {
                            <td><a class="text-decoration-none text-dark cool-link" href="/Team/@item.Id">@item.TeamName</a><span class="badge bg-danger ms-2">Team</span></td>
                        } else {
                            <td><a class="text-decoration-none text-dark cool-link" href="/User/@item.Id">@(item.WebsiteUser?.UserName ?? item.DiscordUsername)</a><span class="badge bg-primary ms-2">Solo</span></td>
                        }
                        <td>@item.Score</td>
                    </tr>
                    }
                </tbody>
            </table>
        }
    </div>

</div>
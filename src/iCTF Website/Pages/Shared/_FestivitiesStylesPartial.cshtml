@{
    var now = DateTime.UtcNow;
    // Halloween
    if (now.Month == 10)
    {
        <style>
            @@font-face {
                font-family: 'Creepster';
                src: url('/fonts/Creepster-Regular.woff2') format('woff2');
                font-weight: normal;
                font-style: normal;
                font-display: swap;
            }

            h1, h2, h3 {
                font-family: 'Creepster' !important;
            }
        </style>
    }
}
@page
@model RegisterModel

@using Microsoft.Extensions.Configuration
@inject IConfiguration configuration

@{
    ViewData["Title"] = "Register";
}

<div class="container text-start my-4 inter">
    <h3 class="mt-3">Register an account</h3>
    <p>Register an account to participate in this competition.</p>
    <hr />
    <div class="row">
        <div class="col-lg-4">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post" id="register-form">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label asp-for="Input.Username" class="mb-1"></label>
                    <input asp-for="Input.Username" class="form-control" placeholder="Enter your username" />
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Input.Email" class="mb-1"></label>
                    <input asp-for="Input.Email" class="form-control" placeholder="Enter your email" />
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Input.Password" class="mb-1"></label>
                    <input asp-for="Input.Password" class="form-control" placeholder="Enter your password" />
                </div>
                <div class="form-group mb-4">
                    <label asp-for="Input.ConfirmPassword" class="mb-1"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirm your password" />
                </div>
                <script src="https://www.google.com/recaptcha/api.js"></script>
                <script>
                    function onSubmit(token) {
                        document.getElementById("register-form").submit();
                    }
                </script>
                <button class="g-recaptcha btn btn-dark w-100 p-3" data-sitekey="@(configuration.GetValue<string>("RecaptchaV2SiteKey"))" data-size="invisible" data-callback="onSubmit">
                    REGISTER
                    <i class="fa-solid fa-angles-right"></i>
                </button>
            </form>
        </div>
        <div class="col-lg-8 d-flex">
            <div class="m-auto text-center">
                <div>
                    <img src="/img/rooYay.png" />
                </div>
                <p class="mt-3">
                    The ImaginaryCTF team is excited to have you on board!
                    <br />
                    Register an account to start competing!
                </p>
            </div>
        </div>
    </div>
</div>
